pipeline {
    agent {
        docker {
            image 'nginx:latest'
            args '-p 8082:80'
        }
    }
    stages {
        stage('Clone') {
            steps {
                checkout scm
            }
        }
        stage('Build image') {
            steps {
                script {
                    dockerImage = docker.build("ngom/nginx")
                }
            }
        }
        stage('Run image') {
            steps {
                script {
                    dockerImage.withRun('-p 8082:80') { c ->
                        sh 'docker ps'
                        sh 'curl localhost:8082'
                    }
                }
            }
        }
    }
}

